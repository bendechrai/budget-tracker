services:
  db:
    image: postgres:17
    restart: unless-stopped
    ports:
      - "{devports:postgres:db}:5432"
    container_name: {devports:project}-db
    environment:
      POSTGRES_USER: ${POSTGRES_USER}
      POSTGRES_PASSWORD: ${POSTGRES_PASSWORD}
      POSTGRES_DB: ${POSTGRES_DB}
    volumes:
      - pgdata:/var/lib/postgresql/data
    healthcheck:
      test: ["CMD-SHELL", "pg_isready -U ${POSTGRES_USER} -d ${POSTGRES_DB}"]
      interval: 5s
      timeout: 2s
      retries: 20

  web:
    build:
      context: ./web
      dockerfile: ../Dockerfile.web
    restart: unless-stopped
    ports:
      - "{devports:app:web}:3000"
    container_name: {devports:project}-web
    environment:
      DATABASE_URL: "postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@db:5432/${POSTGRES_DB}?schema=public"
      SESSION_SECRET: ${SESSION_SECRET}
      NODE_ENV: development
    volumes:
      - ./web:/app
      - /app/node_modules
      - /app/.next
    depends_on:
      db:
        condition: service_healthy

  ralph:
    build:
      context: .
      dockerfile: Dockerfile.ralph
    profiles:
      - ralph
    container_name: {devports:project}-ralph
    environment:
      ANTHROPIC_API_KEY: ${ANTHROPIC_API_KEY:-}
      CLAUDE_CODE_OAUTH_TOKEN: ${CLAUDE_CODE_OAUTH_TOKEN:-}
      RALPH_MODE: ${RALPH_MODE:-build}
    volumes:
      - .:/project
      - /var/run/docker.sock:/var/run/docker.sock
    depends_on:
      - web

volumes:
  pgdata:
